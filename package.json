{
  "name": "sijoitussimulaattori-stock",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-ts",
    "start": "node ./dist/index.js",
    "start:dev": "concurrently -n build-ts,serve --kill-others \"npm run watch-ts\" \"npm run watch-serve\"",
    "test": "jest",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-serve": "env-cmd .env nodemon -L --watch ./dist --exec \"node --inspect\" ./dist/index.js",
    "heroku-postbuild": "bash ./tools/build.sh"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carpppa/sijoitussimulaattori-stock.git"
  },
  "author": "Sijoitussimulaattori Team",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "express-boom": "^2.0.0",
    "express-joi-validation": "^0.3.0",
    "joi": "^13.7.0",
    "knex": "^0.15.2",
    "pg": "^7.6.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.5",
    "@types/joi": "^13.6.1",
    "@types/knex": "^0.14.26",
    "@types/node": "^10.11.7",
    "@types/pg": "^7.4.11",
    "@types/supertest": "^2.0.6",
    "concurrently": "^4.0.1",
    "env-cmd": "^8.0.2",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  }
}
