{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es2017",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": ["index.ts", "src/**/*"]
}
